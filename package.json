{
  "name": "@lvce-editor/about-view-monorepo",
  "version": "0.0.0-dev",
  "description": "",
  "keywords": [
    "about"
  ],
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "",
  "scripts": {
    "build": "node packages/build/src/build.js",
    "build:static": "node packages/build/src/build-static.js",
    "build:watch": "./packages/build/node_modules/.bin/esbuild --format=esm --bundle --external:node:buffer --external:electron --external:ws --external:node:worker_threads --bundle --watch packages/about-view/src/aboutWorkerMain.ts --outfile=.tmp/dist/dist/aboutWorkerMain.js",
    "dev": "node packages/build/src/dev.js",
    "lint": "eslint .",
    "measure": "cd packages/memory && npm run measure",
    "postinstall": "lerna bootstrap --ci",
    "test": "lerna run test",
    "type-check": "tsc -b"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,js",
    "exec": "node scripts/build.js"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 150
  },
  "devDependencies": {
    "@lerna/legacy-package-management": "^8.2.0",
    "@lvce-editor/eslint-config": "^1.25.0",
    "eslint": "^9.19.0",
    "lerna": "^8.2.0",
    "prettier": "^3.5.1",
    "typescript": "^5.7.3"
  }
}
